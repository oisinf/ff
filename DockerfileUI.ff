FROM node:alpine as builder
WORKDIR /app
COPY package.json .
COPY packages/ff/package.json /packages/ff/package.json
COPY lerna.json .
RUN npm install
COPY . .
RUN npm run bootstrap
CMD npm run build_ff_ui

FROM nginx:alpine
EXPOSE 80
COPY --from=builder /app/packages/ff/build /usr/share/nginx/html
